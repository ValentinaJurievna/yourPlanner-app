<UserControl x:Class="yourPlanner.ToggleSwitchMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:yourPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,0,-0.4">
        <Viewbox Margin="0,0,0,-0.4" Height="388" VerticalAlignment="Bottom">
            <Grid HorizontalAlignment="Left" Height="60" Margin="0" VerticalAlignment="Top" Width="120">
                <Rectangle x:Name="Back" Fill="#34558B" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="120" Margin="0,2,0,0" RadiusY="30" RadiusX="30" MouseLeftButtonDown="Back_MouseLeftButtonDown"></Rectangle>
                <!--<Ellipse x:Name="Dot" Fill="White" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="50" MouseLeftButtonDown="Dot_MouseLeftButtonDown"/>-->
                <Image x:Name="Mode" Source="/img/dark.png" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="Mode_MouseLeftButtonDown" SnapsToDevicePixels="True" Height="50" Width="50" ></Image>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
