<Window x:Class="yourPlanner.Windows.notificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yourPlanner.Windows"
        mc:Ignorable="d"
        Title="notificationWindow" MaxHeight="300" Height="300" MaxWidth="400" Width="400" WindowStartupLocation="CenterScreen" Background="#B4C7D6">
    <Grid>
        <TextBlock Name="notificationTitle" TextWrapping="Wrap" FontFamily="Gotham Pro" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="20,0,0,0"/>
        <TextBlock Name="notificationText" TextWrapping="Wrap" FontFamily="Gotham Pro" FontWeight="Light" FontSize="15" Margin="20,40,0,0" VerticalAlignment="Top"/>
        <Button VerticalAlignment="Bottom" Click="closeWindow_Click" Height="30" Width="170" Style="{DynamicResource standart_btn}" FontFamily="Gotham Pro" HorizontalAlignment="Right" Margin="0,0,10,10" >OK</Button>
    </Grid>
</Window>
